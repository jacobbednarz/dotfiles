{
  "edit_predictions": {
    "provider": "copilot",
  },
  "icon_theme": "Catppuccin Frappé",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_font_family": "Berkeley Mono",
  "theme": {
    "mode": "dark",
    "light": "Nord Light",
    "dark": "Catppuccin Frappé - No Italics",
  },
  "notification_panel": {
    "button": false,
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": true,
    "code_actions": false,
  },
  "languages": {
    "HTML": {
      "format_on_save": "off",
    },
    "YAML": {
      "format_on_save": "off",
    },
    "JSONC": {
      "tab_size": 2,
    },
    "Python": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"],
        },
      },
    },
    "Fish": {
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "fish_indent",
        },
      },
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "steep"],
      "formatter": {
        "external": {
          "command": "bundle",
          "arguments": [
            "exec",
            "rubocop",
            "--server",
            "--autocorrect",
            "--stdin",
            "corrected.rb",
            "--stderr",
          ],
        },
      },
      "format_on_save": "on",
      "tab_size": 2,
    },
    "HTML+ERB": {
      "formatter": {
        "external": {
          "command": "erb-formatter",
          "arguments": ["--stdin-filename", "{buffer_path}"],
        },
      },
      "format_on_save": "off",
    },
    "XML": {
      "format_on_save": "off",
    },
  },
  "lsp": {
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false,
      },
    },
    "ruby-lsp": {
      "initialization_options": {
        "require_root_steepfile": false,
        "formatter": "rubocop",
        "linters": ["rubocop", "brakeman"],
      },
    },
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"],
        },
      },
    },
    "basedpyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python",
        },
      },
    },
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "HTML": ["tmpl"],
    "XML": ["csproj"],
  },
  "wrap_guides": [72, 80],
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "project_panel": {
    "dock": "right",
    "default_width": 240,
    "entry_spacing": "standard",
    "indent_guides": {
      "show": "never",
    },
  },
  "collaboration_panel": {
    "button": false,
  },
  "git_panel": {
    "button": false,
  },
  "terminal": {
    "button": false,
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
    "enabled": true,
    "button": true,
  },
  "outline_panel": {
    "default_width": 300,
    "dock": "left",
  },
}
